{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": ["@typescript-eslint"],
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "no-unused-vars": [
            "error", 
            { 
            "vars": "all", 
            "args": "after-used", 
            "ignoreRestSiblings": false 
            }
        ] 
    }
}
  